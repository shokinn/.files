# exa
if [[ $(command -v exa) ]]; then
        lfunc() {
                exal -T -L ${1:-1}
        }
        lafunc() {
                exal -a -T -L ${1:-1}
        }
        alias exal="exa -l -F -g -h --extended --git --group-directories-first --icons"
        alias l='lfunc'
        alias la='lafunc'
        alias ll="lfunc 2"
        alias lla='lafunc 2'
fi

